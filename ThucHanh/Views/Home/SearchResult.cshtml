@{
}
@model IEnumerable<ThucHanh.Models.Product>

<h1>Search Result</h1>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>ProductID</th>
                <th>ProductName</th>
                <th>Description</th>
                <!-- Add more columns as needed -->
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <!-- Add more columns as needed -->
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No products found.</p>
}
